<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
<bean class="com.springcore.ref.Address" name="address1"
	p:houseno="21" p:street="GlaubinLane" p:city="berlin"/>
<bean class="com.springcore.ref.Address" name="address2"
	p:houseno="31" p:street="AlexanderLane" p:city="London"/>
<bean class="com.springcore.ref.Address" name="address3"
	p:houseno="121" p:street="LinconPark" p:city="Usa"/>
<bean class="com.springcore.ref.Student" name="student1">
	<property name="studentId" value="1"></property>
	<property name="studentName" value="Rio"></property>
	<property name="studentAddress" >
		<ref bean="address1"/>
	</property>
</bean>
<bean class="com.springcore.ref.Student" name="student2">
	<property name="studentId" value="2"></property>
	<property name="studentName" value="Tokyo"></property>
	<property name="studentAddress" ref="address2">
	</property>
</bean>
<bean class="com.springcore.ref.Student" name="student3" p:studentId="191" 
p:studentName="Oslo" p:studentAddress-ref="address3"/>
		
	
</beans>